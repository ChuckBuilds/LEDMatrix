{
  "dev_plugins_dir": "~/.ledmatrix-dev-plugins",
  "github_user": "ChuckBuilds",
  "github_pattern": "ledmatrix-",
  "plugins": {
    "music": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-music.git",
      "branch": "main",
      "description": "Display now playing music from Spotify or YouTube Music"
    },
    "stocks": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-stocks.git",
      "branch": "main",
      "description": "Displays scrolling stock tickers with prices and charts"
    },
    "football-scoreboard": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-football-scoreboard.git",
      "branch": "main",
      "description": "Live, recent, and upcoming football games across NFL and NCAA"
    },
    "hockey-scoreboard": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-hockey-scoreboard.git",
      "branch": "main",
      "description": "Live, recent, and upcoming hockey games across NHL and NCAA"
    },
    "basketball-scoreboard": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-basketball-scoreboard.git",
      "branch": "main",
      "description": "Live, recent, and upcoming basketball games across NBA, NCAA, and WNBA"
    },
    "odds-ticker": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-odds-ticker.git",
      "branch": "main",
      "description": "Displays scrolling odds and betting lines for upcoming games"
    },
    "soccer-scoreboard": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-soccer-scoreboard.git",
      "branch": "main",
      "description": "Live, recent, and upcoming soccer games across multiple leagues"
    },
    "baseball-scoreboard": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-baseball-scoreboard.git",
      "branch": "main",
      "description": "Live, recent, and upcoming baseball games across MLB, MiLB, and NCAA"
    },
    "weather": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-weather.git",
      "branch": "main",
      "description": "Comprehensive weather display with current conditions and forecasts"
    },
    "text-display": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-text-display.git",
      "branch": "main",
      "description": "Display custom scrolling or static text with configurable fonts and colors"
    },
    "stock-news": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-stock-news.git",
      "branch": "main",
      "description": "Displays scrolling stock-specific news headlines and financial updates"
    },
    "static-image": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-static-image.git",
      "branch": "main",
      "description": "Display static images on your LED matrix with automatic scaling"
    },
    "of-the-day": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-of-the-day.git",
      "branch": "main",
      "description": "Display daily featured content like Word of the Day or Bible verses"
    },
    "news": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-news.git",
      "branch": "main",
      "description": "Displays scrolling news headlines from RSS feeds"
    },
    "leaderboard": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-leaderboard.git",
      "branch": "main",
      "description": "Displays scrolling leaderboards and standings for multiple sports leagues"
    },
    "calendar": {
      "source": "github",
      "url": "https://github.com/ChuckBuilds/ledmatrix-calendar.git",
      "branch": "main",
      "description": "Display upcoming events from Google Calendar"
    },
    "example-local-plugin": {
      "source": "local",
      "path": "../ledmatrix-example-plugin",
      "description": "Example of a locally developed plugin (not from GitHub)"
    }
  },
  "notes": {
    "dev_plugins_dir": "Directory where GitHub repositories will be cloned. Use ~ for home directory.",
    "github_user": "GitHub username for auto-generating repository URLs",
    "github_pattern": "Prefix pattern for repository names (e.g., 'ledmatrix-' means repos are named 'ledmatrix-{plugin-name}')",
    "plugins": "Plugin definitions. The key is the plugin name (directory name in plugins/). Source can be 'github' or 'local'.",
    "usage": "Copy this file to dev_plugins.json and customize for your needs. The dev_plugins.json file is git-ignored."
  }
}

