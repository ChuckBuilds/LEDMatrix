{
  "mqtt": {
    "enabled": true,
    "broker": {
      "host": "192.168.1.100",
      "port": 1883,
      "username": "homeassistant",
      "password": "your_mqtt_password_here",
      "client_id": "ledmatrix"
    },
    "displays": {
      "rotation": [
        {
          "name": "Temperature",
          "type": "rotation",
          "duration": 15,
          "elements": [
            {
              "type": "text",
              "x": 10,
              "y": 20,
              "mqtt_topic": "homeassistant/climate/living_room/current_temperature",
              "format": "{value}Â°F",
              "font_size": 14,
              "color": [255, 255, 255]
            }
          ]
        }
      ],
      "ondemand": [
        {
          "name": "Doorbell",
          "type": "ondemand",
          "trigger_topic": "homeassistant/binary_sensor/doorbell/state",
          "trigger_value": "on",
          "duration": 8,
          "elements": [
            {
              "type": "text",
              "x": 20,
              "y": 30,
              "text": "DOORBELL",
              "font_size": 12,
              "color": [255, 0, 0]
            }
          ]
        }
      ]
    }
  }
}
